<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="center|top">
        <EditText
            android:id="@+id/ressultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:textSize="48sp"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_margin="2dp"
       android:weightSum="4">
       <Button
           android:id="@+id/btn7"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginRight="2dp"
           android:background="#CB8FF0"
           android:text="7"
           android:textSize="24sp"/>
       <Button
           android:id="@+id/btn8"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginRight="2dp"
           android:background="#CB8FF0"
           android:text="8"
           android:textSize="24sp"
           android:layout_toRightOf="@id/btn7"/>
       <Button
           android:id="@+id/btn9"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginRight="2dp"
           android:background="#CB8FF0"
           android:text="9"
           android:textSize="24sp"
           android:layout_toRightOf="@id/btn8"/>
       <Button
           android:id="@+id/btnmultiple"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="#CB8FF0"
           android:text="X"
           android:textSize="24sp"
           android:layout_toRightOf="@id/btn9"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:weightSum="4">
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:background="#CB8FF0"
            android:text="4"
            android:textSize="24sp" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:background="#CB8FF0"
            android:text="5"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btn4"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:background="#CB8FF0"
            android:text="6"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btn5"/>
        <Button
            android:id="@+id/btndivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="/"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btn6"/>/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:weightSum="4">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="2"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btn1"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="3"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btn2"/>
        <Button
            android:id="@+id/btnsum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="+"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btndivide"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:weightSum="4">
        <Button
            android:id="@+id/btn0"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#CB8FF0"
            android:text="0"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/buttonClean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="C"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btn0"/>
        <Button
            android:id="@+id/btndif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CB8FF0"
            android:text="-"
            android:textSize="24sp"
            android:layout_toRightOf="@id/btnequal"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnequal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="#CB8FF0"
            android:text="="
            android:textSize="30sp" />
    </RelativeLayout>
</LinearLayout>